<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_label_init"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Base de Datos Local con Room"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txt_label_init"
        android:orientation="vertical"
        android:gravity="center|top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_agg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/background_btn_accept"
                android:text="Registrar"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_gestionar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_btn_accept"
                android:text="Gestionar"
                android:textColor="@color/white" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_adult"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/background_btn_accept"
                android:text="Usuarios mayores de edad"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_guy"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_btn_accept"
                android:text="Usuarios menores de edad"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>